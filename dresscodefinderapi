from opencage.geocoder import OpenCageGeocode
import requests
import json 

def get_coordinates(location):
    key = "b95381b5aa684519970f06c731aa464a"
    geocoder = OpenCageGeocode(key) 
    coordinates = geocoder.geocode(location)[0]['geometry']
    return coordinates
  
